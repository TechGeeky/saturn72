<?xml version="1.0" encoding="utf-8" ?>
<config>
  <assemblies>
    <!--This section contains assemblies that need to be loaded as prerequisite to the app domain-->
    <assembly Path="Modules\Saturn72.Module.Owin\Saturn72.Module.Owin.dll"/>
    <assembly Path="Modules\Saturn72.Module.Owin\System.Net.Http.Formatting.dll"/>
    <assembly Path="Modules\Saturn72.Module.Owin\Microsoft.Owin.Host.HttpListener.dll"/>
    <assembly Path="Modules\Saturn72.Module.Owin\System.Net.Http.Formatting.dll"/>
    <assembly Path="EntityFramework.SqlServer.dll"/>
    <assembly Path="Mimas.WebApi.dll"/>
  </assemblies>
  <env>
    <!--This section contains the environment data-->
    <modules Directory ="Modules" ShadowCopyDirectory="bin" DeleteShadowDirectoryOnStartup="True"/>
    <plugins Directory ="..\..\..\Mimas.Server\Plugins" ShadowCopyDirectory="bin" DeleteShadowDirectoryOnStartup="True"/>
  </env>

  <modules>
    <!--This section contains Modules to be loaded to the appdomain-->
    <module Type="Saturn72.Module.Ioc.Autofac.AutofacModule, Saturn72.Module.Ioc.Autofac" Active="true" StartupOrder="10" StopOrder="100"/>
    <module Type="Saturn72.Module.Owin.OwinModule, Saturn72.Module.Owin" Active="true" StartupOrder="20" StopOrder="20"/>
    <module Type="Saturn72.Module.Secutiry.FileValidation.FileValidationModule, Saturn72.Module.Secutiry.FileValidation" Active="true" StartupOrder="20" StopOrder="20"/>
    <module Type="Saturn72.Module.Ioc.Autofac.Owin.AutofacOwinModule, Saturn72.Module.Ioc.Autofac.Owin" Active="true" StartupOrder="30" StopOrder="100"/>
  </modules>

  <!--this element contains the configuration mapping file relative path-->
  <configMaps Path="Config\ConfigMaps.xml"/>
</config>